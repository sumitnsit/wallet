= form_for @account_type do |f|
  - if @account_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account_type.errors.count, "error")} prohibited this account_type from being saved:"
      %ul
        - @account_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_field :desc
  .field
    = f.label :factor
    = f.number_field :factor
  .field
    = f.label :active
    = f.check_box :active    
  .actions
    = f.submit 'Save'
