= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :quantity
    = f.text_field :quantity
  .field
    = f.label :rate
    = f.text_field :rate
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :unit_id
    = f.number_field :unit_id
  .field
    = f.label :category_id
    = f.number_field :category_id
  .field
    = f.label :payee_id
    = f.number_field :payee_id
  .field
    = f.label :shopping_id
    = f.number_field :shopping_id
  .actions
    = f.submit 'Save'
