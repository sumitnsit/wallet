= form_for @account do |f|
  - if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :account_type_id
    = f.select :account_type_id, AccountType.active.collect {|p| [ p.name, p.id ] }
  .field
    = f.label :init_amount
    = f.text_field :init_amount
  .field
    = f.label :note
    = f.text_area :note
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :currency_id
    = f.select :currency_id, Currency.active.collect {|p| [ p.name, p.id ] }
  .actions
    = f.submit 'Save'
