= form_for @unit do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@unit.errors.count, "error")} prohibited this unit from being saved:"
      %ul
        - @unit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :symbol
    = f.text_field :symbol
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :unit_type
    = f.text_field :unit_type
  .field
    = f.label :note
    = f.text_area :note
  .actions
    = f.submit 'Save'
